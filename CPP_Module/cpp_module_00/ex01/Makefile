.PHONY: all clean re
COMPILER = clang++
FLAGS = -Wall -Werror -Wextra
SRCS = main.cpp phonebook.cpp
HEADER = phonebook.hpp
NAME = phonebook

all: $(NAME)

$(NAME): $(SRCS) $(HEADER)
	$(COMPILER) $(FLAGS) $(SRCS) -o $(NAME)

clean:
	rm $(NAME)

re: clean all
